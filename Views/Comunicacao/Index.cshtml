@model MultiSis.Administrativo.Models.ComunicacaoModel

<div class="titulo-pagina">
    <h1 class="margin-bottom">Comunicação interna</h1>
</div>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Informe sua mensagem
            </div>
            <div class="panel-body">
                <p>
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mensagem, "Mensagem")<span class="campo-obrigatorio">*</span>
                            @Html.EditorFor(model => model.Mensagem, new { @required = "true", @class = "", placeholder = "" })
                        </div>
                    </div>
                </p>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <button class="btn btn-success" id="btnAlterar" type="submit" value="Enviar" title="Enviar">Enviar</button>
            <button class="btn btn-default" id="btnCancelar" value="Cancelar" title="Cancelar">Cancelar</button>
        </div>
    </div>
}
