@model MultiSis.Administrativo.Models.ControleAcessoModel

<div class="titulo-pagina">
    <h1 class="margin-bottom">Autorizar grupo a acessar telas</h1>
</div>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => Model.GrupoAcesso.Id);
    @Html.HiddenFor(model => Model.GrupoAcesso.Nome);
                                                                   
    <table class="table table-striped table-bordered table-hover" >
        <tr>
            <th>
                Salva
            </th>
            <th>
                Altera
            </th>
            <th>
                Exclui
            </th>
            <th>
                Tela
            </th>
        </tr>
        @for (int i = 0; i < Model.Controles.Count; i++)
        {
            <tr>
                <td style="text-align: center">
                    @Html.EditorFor(modelItem => modelItem.Controles[i].FL_SALVAR)
                </td>
                <td style="text-align: center">
                    @Html.EditorFor(modelItem => modelItem.Controles[i].FL_ALTERAR)
                </td>
                <td style="text-align: center">
                    @Html.EditorFor(modelItem => modelItem.Controles[i].FL_EXCLUIR)
                </td>
                <td>
                    @Html.HiddenFor(modelItem => modelItem.Controles[i].ID_TELA)
                    @Html.HiddenFor(modelItem => modelItem.Controles[i].NM_TELA)
                    @Html.DisplayFor(modelItem => modelItem.Controles[i].NM_TELA)
                </td>
            </tr>
        }
    </table>        
    <div class="clear label">
        <span>
            <button class="btn btn-success" id="btnsalvar" type="submit" value="Salvar">Salvar</button>
            <button class="btn btn-default" id="btnCancelar" value="Cancelar" title="Cancelar">Cancelar</button>
        </span>
    </div>
}