@model PagedList.IPagedList<MultiSis.Domain.Conta>

<script src="~/Scripts/View/TrocaTitularidade/TrocaTitularidade.js"></script>

<div id="conteudo_pagina">
    <table class="table table-striped table-bordered table-hover" >
        <tr>
            <th style="text-align: left">ID da conta
            </th>
            <th style="text-align: left">Nome do titular
            </th>
            <th></th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td style="text-align: left">
                    @c.Identificacao
                </td>
                <td style="text-align: left">
                    @c.Pessoa.Nome
                </td>
                <td>
                    <a href="javascript:void(0)" onclick="javascript:GetConta('@c.Identificacao', @c.Id);">Selecionar</a>
                </td>
            </tr>
        }
    </table>
    <div id="paginacao">
        <div class="pagina">
            Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
        </div>
        @if (Model.HasPreviousPage)
        {
            <span class="margin-left">
                <a href="javascript:void(0)" onclick="javascript:PesquisaConta($('#IdentificacaoConta').val(), 1);" title="Primeira página"><<</a>
                <a href="javascript:void(0)" onclick="javascript:PesquisaConta($('#IdentificacaoConta').val(), @Convert.ToInt32(Model.PageNumber - 1));" title="Página anterior">Anterior</a>
                <text>|</text>
            </span>
        }
        else
        {
            <span class="margin-right"><<
            </span>
            <span class="margin-right">< Anterior
            </span>
            <text>|</text>
        }
        @if (Model.HasNextPage)
        {
            <span class="margin-left">
                <a href="javascript:void(0)" onclick="javascript:PesquisaConta($('#IdentificacaoConta').val(), @Convert.ToInt32(Model.PageNumber + 1));" title="Próxima página">Próxima ></a>
                <a href="javascript:void(0)" onclick="javascript:PesquisaConta($('#IdentificacaoConta').val(), @Model.PageCount);" title="Última página">>></a>
            </span>
        }
        else
        {
            <span class="margin-right margin-left">Próxima >
            </span>
            <span class="margin-right">>>
            </span>
        }
    </div>
</div>
