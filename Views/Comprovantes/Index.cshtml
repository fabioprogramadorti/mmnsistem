@model List<MultiSis.Domain.ComprovanteDepositoTransferencia>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Comprovantes de depósito ou tranferência</h1>
</div>

<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>Pedido</th>
        <th>Conta</th>
        <th>Valor líquido</th>
        <th>Data envio</th>
        <th></th>
    </tr>
    @if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
        <tr>
            <td>@item.Pedido.DataPedido.ToString("yyyyMMdd")@item.Pedido.Id.ToString()</td>
            <td>@item.Pedido.Conta.Identificacao</td>
            <td>@item.Pedido.ValorLiquido</td>
            <td>@item.DataEnvio.ToString("dd/MM/yyyy")</td>
            <td>
                <button type="button" class="btn btn-primary" onclick="javascript:window.location='/pedido/detalhe/@item.IdPedido';">Detalhe do pedido</button></td>
        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" style="text-align: center">Nenhum comprovante pendente</td>
        </tr>
    }
</table>
