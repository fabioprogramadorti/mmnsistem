@model IEnumerable<MultiSis.Domain.GrupoAcesso>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Grupos de acesso ao sistema cadastrados</h1>
</div>

<button class="btn btn-success" type="button" title="Cadastrar grupo acesso" onclick="javascript:window.location='/grupoacesso/cadastrar'">Cadastrar grupo acesso</button>
<br />
<br />
<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>
            Nome do grupo
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Nome
            </td>
            <td>
                @Html.ActionLink("Alterar", "alterar", new { id = item.Id })
            </td>
        </tr>
    }
</table>