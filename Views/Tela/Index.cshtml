@model IEnumerable<MultiSis.Domain.Tela>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Telas</h1>
</div>

<button class="btn btn-success" type="button" title="Cadastrar tela" onclick="javascript:window.location='/tela/cadastrar'">Cadastrar tela</button>
<br />
<br />

<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>Menu
        </th>
        <th>Nome
        </th>
        <th>Nome no menu
        </th>
        <th>URL Imagem
        </th>
        <th>Ativo
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Menu.Nome
            </td>
            <td>
                @item.Nome
            </td>
            <td>
                @item.NomeTelaMenu
            </td>
            <td>
                @item.URLImagem
            </td>
            <td>
                @if (item.Ativo)
                {
                    <text>Sim</text>
                }
                else
                {
                    <text>Não</text>
                }
            </td>
            <td>
                @Html.ActionLink("Editar", "alterar", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Excluir", "delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
