@model MultiSis.Domain.GrupoAcessoUsuario

<div class="titulo-pagina">
    <h1 class="margin-bottom">Adicionar grupo ao usuário - @Model.UsuarioAdministrativo.Nome</h1>
</div>

@using (Html.BeginForm())
{

    <div class="label">
        @Html.LabelFor(model => model.IdGrupoAcesso, "Grupo Acesso")
    </div>
    <div class="text">
        @Html.DropDownList("IdGrupoAcesso", String.Empty)
        @Html.ValidationMessageFor(model => model.IdGrupoAcesso)
    </div>

    <div class="label">
        @Html.LabelFor(model => model.IdUsuario, "Usuário")
    </div>
    <div class="text">
        @Html.DropDownList("IdUsuario", "-- selecione --")
        @Html.ValidationMessageFor(model => model.IdUsuario)
    </div>

    <div class="clear label">
        <span>
            <button class="btn btn-success" id="btnsalvar" type="submit" value="Salvar">Salvar</button>
            <button class="btn btn-default" id="btnCancelar" value="Cancelar" title="Cancelar">Cancelar</button>
        </span>
    </div>
}
