@model List<MultiSis.Administrativo.Models.DiferencaAdesaoBonusPorPlanoModel>

<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th style="text-align: left">Conta</th>
        <th style="text-align: left">Plano</th>
        <th style="text-align: right">Investimento</th>
        <th style="text-align: right">Valor ganho</th>
        <th style="text-align: right">Diferença</th>
        <th style="text-align: right">Saldo conta</th>
        <th style="text-align: center">Atingiu a meta</th>
    </tr>
    @foreach (var c in Model)
    {
        if (c.ValorDiferenca <= 0)
        {
        <tr style="background-color: rgba(255, 0, 0, 0.50)">
            <td style="text-align: left">
                @c.Identificacao
            </td>
            <td style="text-align: left">
                @c.NomePlano
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.ValorInvestimento)
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.ValorGanho)
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.ValorDiferenca)
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.SaldoConta.Value)
            </td>
            <td style="text-align: center">
                <b>SIM</b>
            </td>
        </tr>
        }
        else
        {
        <tr>
            <td style="text-align: left">
                @c.Identificacao
            </td>
            <td style="text-align: left">
                @c.NomePlano
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.ValorInvestimento)
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.ValorGanho)
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.ValorDiferenca)
            </td>
            <td style="text-align: right">R$ @String.Format("{0:###,###,###0.00}", c.SaldoConta.Value)
            </td>
            <td style="text-align: center">
                <b>NÃO</b>
            </td>
        </tr>
        }
    }
</table>
