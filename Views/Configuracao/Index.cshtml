@model IEnumerable<MultiSis.Domain.Configuracoes>
<div class="titulo-pagina">
    <h1 class="margin-bottom">Configuração do sistema</h1>
</div>

@if (Model.Count() == 0)
{
    <div class="row">
        <div class="col-lg-12">
            <a href="/configuracao/create" class="btn btn-success"><i class="fa fa-plus"></i> Cadastrar configuração</a><br /><br />
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    Empresa
                </th>
                <th>
                    Rede linear
                </th>
                <th>
                    Binário
                </th>
                <th>
                    Ponto binário (R$)
                </th>
                <th>
                    Cotas
                </th>
                <th></th>
            </tr>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RedeLinear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RedeBinaria)
                        </td>
                        <td>
                            @String.Format("{0:##,###,###0.00}", item.ValorPontoBinario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cotas)
                        </td>
                        <td>
                            <button type="button" class="btn btn-primary" onclick="javascript:window.location='/configuracao/edit/@item.Id';">Consultar / Alterar</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8" style="text-align:center">
                        Nenhum registro encontrado
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
