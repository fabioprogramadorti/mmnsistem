@model MultiSis.Administrativo.Models.TesteModel

<div class="titulo-pagina">
    <h1 class="margin-bottom">Cadastar teste de rede</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="label">
        @Html.LabelFor(model => model.IdentificacaoPatrocinador, "Patrocinador")
    </div>
    <div class="text">
        @Html.TextBoxFor(model => model.IdentificacaoPatrocinador, new { required = "true"})
    </div>

    <div class="label">
        @Html.LabelFor(model => model.NomePessoa, "Nome")
    </div>
    <div class="text">
        @Html.TextBoxFor(model => model.NomePessoa, new { required = "true" })
    </div>

    <div class="label">
        @Html.LabelFor(model => model.EmailPessoa, "E-mail")
    </div>
    <div class="text">
        @Html.TextBoxFor(model => model.EmailPessoa, new { required = "true" })
    </div>

    <div class="label">
        @Html.LabelFor(model => model.IdPlanoNegocioSelecionado, "Plano de negócio")
    </div>
    <div class="text">
        @Html.DropDownList("IdPlanoNegocioSelecionado", "-- selecione --")
    </div>
    
    <div class="label">
        @Html.LabelFor(model => model.IdentificacaoConta, "ID Conta")
    </div>
    <div class="text">
        @Html.TextBoxFor(model => model.IdentificacaoConta, new { required = "true" })
    </div>

    <div class="label">
        @Html.LabelFor(model => model.Equipe, "Lado de equipe")
    </div>
    <div class="text">
        @Html.DropDownListFor(x => x.Equipe, new MultiSis.Common.DropDown.DropDownList().GetDropDownListEquipeBinaria(), "-- selecione --", null)
    </div>

    <div class="clear label">
        <span>
            <button class="btn btn-success" id="btnsalvar" type="submit" value="Salvar">Salvar</button>
            <button class="btn btn-default" id="btnCancelar" value="Cancelar" title="Cancelar">Cancelar</button>
        </span>
    </div>
}