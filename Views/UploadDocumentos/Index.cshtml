@model IList<MultiSis.Domain.ArquivoDownload>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Arquivos disponibilizados aos associados</h1>
</div>

<div class="row">

    <button style="margin-bottom: 20px;" class="btn btn-primary" id="btnAdicionar" type="button" onclick="javascript: window.location = '/uploaddocumentos/upload';" value="Adicionar novo">Novo arquivo</button>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>
                Título
            </th>
            <th>
                Disponível para download
            </th>
            <th></th>
        </tr>
        @if (Model.Count > 0)
        {
            foreach (var a in Model)
            {
                <tr>
                    <td>
                        @a.Titulo
                    </td>
                    <td>
                        @if (a.Disponivel)
                        {
                            <text>Sim</text>
                        }
                        else
                        {
                            <text>Não</text>
                        }
                    </td>
                    <td>
                        @if (a.Disponivel)
                        {
                            @Html.ActionLink("Retirar do escritório", "MudarDisponibilidade", new { id = a.Guid })
                        }
                        else
                        {
                            @Html.ActionLink("Disponibilizar no escritório", "MudarDisponibilidade", new { id = a.Guid })
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" style="text-align: center">
                    Nenhum registro encontrado
                </td>
            </tr>
        }
    </table>
</div>