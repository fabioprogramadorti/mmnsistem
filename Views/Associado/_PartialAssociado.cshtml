@model List<MultiSis.Domain.Conta>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th style="text-align: left">
            ID da conta
        </th>
        <th style="text-align: left">
            Nome do titular
        </th>
        <th style="text-align: right">CPF ou CPNJ</th>
        <th style="text-align: right">Ativação</th>
        <th style="text-align: right">Cancelamento</th>
        <th></th>
    </tr>
    @if (Model.Count > 0)
    {
        foreach (var c in Model)
        {
            <tr>
                <td style="text-align: left">
                    @c.Identificacao
                </td>
                <td style="text-align: left">
                    @c.Pessoa.Nome
                </td>
                <td style="text-align: right">
                    @c.Pessoa.CPFCNPJ
                </td>
                <td style="text-align: right">
                    @c.DataAtivacao
                </td>
                <td style="text-align: right">
                    @c.DataCancelamento
                </td>
                <td style="text-align: left">
                    @Html.ActionLink("Selecionar", "detalhe", "associado", new { id = c.IdPessoa }, null)
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td style="text-align:center" colspan="6">Nenhum registro encontrado</td>
        </tr>
    }
</table>
