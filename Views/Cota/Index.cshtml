@model List<MultiSis.Domain.ConfiguracaoCota>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Configuração de cota</h1>
</div>

<div class="row">
    <div class="col-lg-12">
        <a href="/cota/cadastrar" class="btn btn-success"><i class="fa fa-plus"></i> Cadastrar cota</a><br /><br />
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped table-bordered table-hover">
            <tr>
                <th>
                    Valor
                </th>
                <th>
                    Limite de ganho sobre o investimento (%)
                </th>
                <th>
                    Data de inicio
                </th>
            </tr>
            @if (Model.Count() > 0)
            {
                foreach (var p in Model)
                {
                    <tr>
                        <td>
                            R$ @String.Format("{0:##,###,###0.00}", p.ValorCota)
                        </td>
                        <td>
                            @Convert.ToInt32(p.PorcentagemLimiteGanhoInvestimento) %
                        </td>
                        <td>
                            @p.DataInicio.ToString("dd/MM/yyyy")
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" style="padding: 2em; text-align: center">
                        Nenhuma cota cadastrada
                    </td>
                </tr>
            }
        </table>
    </div>
</div>