@model MultiSis.Administrativo.Models.LoginModel

<script>
    $(function () {
        $('#btnAcessar').click(function () {
            if ($('#Login').val() == "" || $('#Senha').val() == "") {
                MensagemOK('Login e Senha são obrigatórios');
                return false;
            }
        });
    });
</script>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <div style="text-align:center">
                        <div class="slogan font-logo" style="font-size: 75pt; margin-bottom: 10px;">
                            <img src="~/Image/logo.png" style="width: 280px; height: auto;" /><br />
                        </div>
                    </div>
                    <h3 style="margin-top: 10px;" class="panel-title"><br />Entre com seus dados de acesso</h3>
                </div>
                <div class="panel-body">
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="E-mail" id="Login" name="Login" autofocus required>
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Senha" id="Senha" name="Senha" type="password" value="" required>
                            </div>
                            <button id="btnAcessar" type="submit" class="btn btn-lg btn-success btn-block">Acessar</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

