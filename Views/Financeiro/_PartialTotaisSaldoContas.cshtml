@model List<MultiSis.Administrativo.Models.RelatorioSaldosModel>

<div class="row">
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@MultiSis.Common.Constantes.SimboloMoeda @String.Format("{0:###,###,###0.00}", Model.Sum(x => x.SaldoBonus))</div>
                        <div>Total de saldos das contas</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-shopping-cart fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@MultiSis.Common.Constantes.SimboloMoeda @String.Format("{0:###,###,###0.00}", Model.Sum(x => x.SaldoSaldoAdicional))</div>
                        <div>Total de saldo adicional das contas</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>