@model MultiSis.Administrativo.Models.InserirCreditoModel

<h1>Inserir saldo (Inside IRRF)</h1>


@using (Html.BeginForm("InserirSaldo", "financeiro", FormMethod.Post, new { @onsubmit = "return confirm('Confirma o crédito de R$ ' + $('#Valor').val() + ' na conta " + Model.Identificacao.Trim() + "?');" }))
{
    @Html.HiddenFor(m => m.IdConta)
    @Html.HiddenFor(m => m.Identificacao)

    <table style="width: 100%; text-align: left; padding: 5px;">
        <tr>
            <td style="width: 120px; padding: 8px;">Conta:</td>
            <td style="padding: 8px;">@Model.Identificacao</td>
        </tr>
        <tr>
            <td style="padding: 8px;">Titular:</td>
            <td style="padding: 8px;">@Model.NomeTitular</td>
        </tr>
        <tr>
            <td style="padding: 8px;">CPF / CNPJ:</td>
            <td style="padding: 8px;">@Model.CPFCNPJTitular</td>
        </tr>
        <tr>
            <td style="padding: 8px;">Operação:</td>
            <td style="padding: 8px;">@Html.DropDownList("IdOperacao", "-- selecione --")</td>
        </tr>
        <tr style="background-color: yellow">
            <td style="padding: 8px;">Valor a creditar:</td>
            <td style="padding: 8px;">@Html.TextBoxFor(m => m.Valor, new { @style = "width: 20%;" }) <span style="font-size: 12px; font-weight: bold;">Ex. 1000,00 (Sem pontos para creditar R$ 1.000,00)</span></td>
        </tr>
    </table>
    
    <div class="clear label">
        <span>
            <button class="btn btn-success" id="btnConfirmar" type="submit" value="Confirmar crédito">Confirmar crédito</button>
            <button class="btn btn-default" id="btnCancelar" value="Cancelar" title="Cancelar">Cancelar</button>
        </span>
    </div>   
}