@model MultiSis.Administrativo.Models.UsuarioModel

<div class="titulo-pagina">
    <h1 class="margin-bottom">Cadastrar usuário</h1>
</div>

@using (Html.BeginForm())
{
    <div class="label">
        @Html.LabelFor(model => model.Usuario.Nome, "Nome")
    </div>
    <div class="text">
        @Html.EditorFor(model => model.Usuario.Nome)
    </div>
    
    <div class="label">
        @Html.LabelFor(model => model.Usuario.Email, "E-mail")
    </div>
    <div class="text">
        @Html.EditorFor(model => model.Usuario.Email)
    </div>
    
    <div class="label">
        @Html.LabelFor(model => model.Usuario.Login, "Login")
    </div>
    <div class="text">
        @Html.EditorFor(model => model.Usuario.Login)
    </div>
    
    <div class="label">
        @Html.LabelFor(model => model.Usuario.Senha, "Senha")
    </div>
    <div class="text">
        <input type="text" value="Gerado Automaticamente" readonly="readonly" />
    </div>

    <div class="label">
        @Html.LabelFor(model => model.Usuario.DireitosEspeciaisAdministrativo, "Administrativo")
    </div>
    <div class="text">
        @Html.DropDownListFor(model => model.Usuario.DireitosEspeciaisAdministrativo, new MultiSis.Common.DropDown.DropDownList().GetDropDownListSimNao(), "-- selecione --", null)
    </div>

    <div class="label">
        @Html.LabelFor(model => model.Usuario.DireitosEspeciaisFinanceiro, "Financeiro")
    </div>
    <div class="text">
        @Html.DropDownListFor(model => model.Usuario.DireitosEspeciaisFinanceiro, new MultiSis.Common.DropDown.DropDownList().GetDropDownListSimNao(), "-- selecione --", null)
    </div>

    <div class="label">
        @Html.LabelFor(model => model.Usuario.DireitosEspeciaisSuporte, "Suporte")
    </div>
    <div class="text">
        @Html.DropDownListFor(model => model.Usuario.DireitosEspeciaisSuporte, new MultiSis.Common.DropDown.DropDownList().GetDropDownListSimNao(), "-- selecione --", null)
    </div>

    <div class="label">
        <p>
            <h3>Grupos de acesso do usuário</h3>
        </p>
        <table class="table table-striped table-bordered table-hover" >
            <tr>
                <th></th>
                <th style="text-align: left">Grupo
                </th>
            </tr>
            @for (int i = 0; i < Model.Grupos.Count; i++)
            {
                <tr>
                    <td style="text-align: center; width: 50px">
                        @Html.EditorFor(modelItem => modelItem.Grupos[i].Selecionado)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => modelItem.Grupos[i].Nome)
                        @Html.HiddenFor(modelItem => modelItem.Grupos[i].IdGrupo)
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="clear label">
        <span>
            <button class="btn btn-success" id="btnsalvar" type="submit" value="Salvar">Salvar</button>
            <button class="btn btn-default" id="btnCancelar" value="Cancelar" title="Cancelar">Cancelar</button>
        </span>
    </div>
}
