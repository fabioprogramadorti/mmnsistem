@model PagedList.IPagedList<MultiSis.Administrativo.Models.CampanhaModel.PessoaCampanha>

<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th></th>
        <th>Nome</th>
        <th>Data nascimento</th>
    </tr>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@Html.CheckBoxFor(m => m[i].Selecionado, new { onClick = "SelecionarPessoa(this, " + Model[i].IdPessoa + ");" })</td>
            <td>@Model[i].Nome</td>
            <td>@Model[i].DataNascimento.ToString("dd/MM/yyyy")</td>
        </tr>
    }
</table>
<div id="paginacao">
    <div class="pagina">
        Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount
    </div>
    @if (Model.HasPreviousPage)
    {
        <span class="margin-left">
            <a href="javascript:PaginacaoSemFiltro(1);" title="Primeira página"><<</a>
            <a href="javascript:PaginacaoSemFiltro(@(Model.PageNumber - 1));" title = "Página anterior">< Anterior</a>
            <text>|</text>
        </span>
    }
    else
    {
        <span class="margin-right"><<
        </span>
        <span class="margin-right">< Anterior
        </span>
        <text>|</text>
    }
    @if (Model.HasNextPage)
    {
        <span class="margin-left">
            <a href="javascript:PaginacaoSemFiltro(@(Model.PageNumber + 1));" title = "Próxima página">Próxima ></a>
            <a href="javascript:PaginacaoSemFiltro(@Model.PageCount);" title = "Última página">>></a>
        </span>
    }
    else
    {
        <span class="margin-right margin-left">Próxima >
        </span>
        <span class="margin-right">>>
        </span>
    }
</div>
