@model List<MultiSis.Domain.Campanha>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Campanhas cadastradas</h1>
</div>

<button type="button" title="Nova campanha">@Html.ActionLink("Nova campanha", "new")</button>

<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>Campanha
        </th>
        <th>Tipo
        </th>
        <th>Data criação
        </th>
        <th>Data expiração
        </th>
        <th>Bônus por visualização
        </th>
        <th></th>
    </tr>
    @if (Model.Count > 0)
    {
        foreach (var c in Model)
        {
        <tr>
            <th>@c.Nome
            </th>
            <th>@c.TipoCampanha.Nome
            </th>
            <th>@c.DataCriacao.ToString("dd/MM/yyyy")
            </th>
            <th>@c.DataExpiracao.ToString("dd/MM/yyyy")
            </th>
            <th>
                R$ @String.Format("{0:###,###,###0.00}", c.Bonus)
            </th>
            <th></th>
        </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" style="text-align: center">Nenhum registro encontrado</td>
        </tr>
    }
</table>
