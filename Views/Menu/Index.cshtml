@model IEnumerable<MultiSis.Domain.Menu>

<div class="titulo-pagina">
    <h1 class="margin-bottom">Menus</h1>
</div>

<button class="btn btn-success" type="button" title="Cadastrar menu" onclick="javascript:window.location='/menu/cadastrar'">Cadastrar menu</button>
<br />
<br />

<table class="table table-striped table-bordered table-hover" >
    <tr>
        <th>Nome
        </th>
        <th>Menu Pai
        </th>
        <th>Ordem
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Nome
            </td>
            <td>
                @if (item.Menu2 != null)
                {
                    <text>@item.Menu2.Nome</text>
                }
                else
                {
                    <text>-</text>    
                }

            </td>
            <td>
                @item.OrdemMenu
            </td>
            <td>
                @Html.ActionLink("Alterar", "alterar", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Excluir", "delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
